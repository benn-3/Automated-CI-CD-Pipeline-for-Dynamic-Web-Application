{
  "dashboard": {
    "id": null,
    "title": "Flask App Dashboard",
    "tags": ["flask", "kubernetes"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"flask-app-.*\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~\"flask-app-.*\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests"
          }
        ],
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors"
          }
        ],
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}
